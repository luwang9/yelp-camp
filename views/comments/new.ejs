<%- include("../partials/header") %>
<div class="container">
    <div class="row" style="width: 55%; margin: 0 auto;">
        <h1 >Add a new comment to <%= campground[0].name %></h1>

    </div>
    <div class="row">

        
        <div style="width: 30%; margin: 20px auto;">

            <form action="/campgrounds/<%= campground[0]._id %>/comments" method="POST" >
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">

                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "comment[author]" placeholder="author">

                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>

                </div>
            </form>
            <a href="/campgrounds/<%= campground[0]._id %>">Go back</a>
        </div>
    </div>
</div>
    
    


<%- include("../partials/footer") %>


